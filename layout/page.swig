{% extends "_layout.swig" %}
  {% block title %}
    {{config.title}}
    {% if config.subtitle %}
      | {{ config.subtitle }}
    {% endif %}
  {% endblock %}

  {% block main %}
  <div class="main-inner" data-barba="container" data-barba-namespace="other">
    {% if page.type === 'about' %}
      <div class="about syuanpi fadeInRightShort">
        <h2 class="title"> {{ __('nav.about') }} </h2>
        <div class="content">
          {% if theme.self %}
            {{ theme.self }}
          {% else %}
            {{ page.content }}
          {% endif %}
        </div>
      </div>
      {% include "_partial/friendlink.swig" %}
      {% include "_partial/_post/comments.swig" %}
    {% else %}
      {{ page.content }}
    {% endif %}
  </div>
  {% endblock %}
